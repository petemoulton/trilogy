# Trilogy AI System - Production Environment

# Server Configuration
PORT=8080
NODE_ENV=production

# AI API Configuration (Set these in your deployment environment)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Model Configuration
SONNET_MODEL=claude-3-5-sonnet-20241022
OPUS_MODEL=claude-3-opus-20240229
GPT_MODEL=gpt-4

# Memory System (PostgreSQL)
MEMORY_BACKEND=postgresql
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trilogy
POSTGRES_USER=trilogy
POSTGRES_PASSWORD=

# Security (Generate strong secrets in production)
JWT_SECRET=
SESSION_SECRET=
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Logging
LOG_LEVEL=warn
LOG_TO_FILE=true
LOG_PATH=/app/logs

# Git Configuration
GIT_AUTHOR_NAME=Akhil Sabu Varughese
GIT_AUTHOR_EMAIL=akhilsabuv@gmail.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
SENTRY_DSN=

# Chrome Extension (MCP)
MCP_SERVER_PORT=3000
MCP_SERVER_URL=https://mcp.yourdomain.com

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem