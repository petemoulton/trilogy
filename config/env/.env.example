# Trilogy AI System Environment Configuration

# Server Configuration
PORT=8080
NODE_ENV=development

# AI API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
SONNET_MODEL=claude-3-5-sonnet-20241022
OPUS_MODEL=claude-3-opus-20240229
GPT_MODEL=gpt-4

# Memory System (PostgreSQL preferred)
MEMORY_BACKEND=postgresql
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trilogy
POSTGRES_USER=trilogy
POSTGRES_PASSWORD=trilogy123

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/trilogy
SQLITE_PATH=./data/trilogy.db

# Chrome Extension (MCP)
MCP_SERVER_PORT=3000
MCP_SERVER_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_PATH=./logs

# Git Configuration
GIT_AUTHOR_NAME=Akhil Sabu Varughese
GIT_AUTHOR_EMAIL=akhilsabuv@gmail.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
CONTAINER_NAME=trilogy-ai-system