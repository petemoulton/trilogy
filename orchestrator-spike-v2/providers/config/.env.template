# Multi-Provider API Configuration - V2 Enhanced
# Copy to .env and add your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Google Gemini Configuration  
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_PROJECT_ID=your_project_id_here

# Enhanced V2 Settings
ENABLE_PROVIDER_HEALTH_MONITORING=true
ENABLE_INTELLIGENT_RETRY=true
ENABLE_COST_OPTIMIZATION=true

# Rate Limiting (requests per minute) - V2 Optimized
OPENAI_RATE_LIMIT=60
GEMINI_RATE_LIMIT=40
GLOBAL_RATE_LIMIT=100

# Default Models - V2 Enhanced
OPENAI_GPT4_MODEL=gpt-4
OPENAI_GPT35_MODEL=gpt-3.5-turbo
GEMINI_MODEL=gemini-pro

# Token Limits - V2 Optimized
OPENAI_MAX_TOKENS=4000
GEMINI_MAX_TOKENS=3000
MAX_RETRY_ATTEMPTS=3

# Timeout Settings (milliseconds) - V2 Enhanced
API_TIMEOUT=45000
HEALTH_CHECK_INTERVAL=30000
RETRY_DELAY_BASE=2000

# V2 Quality & Monitoring
ENABLE_QUALITY_SCORING=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_REAL_TIME_METRICS=true
MIN_QUALITY_SCORE=7.0

# Debug & Logging - V2 Enhanced
DEBUG_API_CALLS=true
ENABLE_DETAILED_LOGGING=true
LOG_LEVEL=info